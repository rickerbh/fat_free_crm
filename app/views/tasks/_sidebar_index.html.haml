.filters#filters
  = render :partial => "selector"
  - if @view == "pending" || @view == "assigned"
    - [["Overdue", :overdue], ["As Soon As Possible", :due_asap], ["Today", :due_today], ["Tomorrow", :due_tomorrow], ["This Week", :due_this_week], ["Next Week", :due_next_week], ["Sometime Later", :due_later]].each do |value, key|
      .check_box{:style => "border-bottom: 1px silver dotted;"}
        %div{:style => "float:right;"}
          = @task_total[key]
        = task_filter_checbox(@view, key, @task_total[key]) << " " << value
  - else 
    - [["Today", :completed_today], ["Yesterday", :completed_yesterday], ["Last week", :completed_last_week], ["This month", :completed_this_month], ["Last month", :completed_last_month]].each do |value, key|
      .check_box{:style => "border-bottom: 1px silver dotted;"}
        %div{:style => "float:right;"}
          = @task_total[key]
        = task_filter_checbox(@view, key, @task_total[key]) << " " << value
  .check_box
    %div{:style => "float:right;"}
      %b= @task_total[:all]
    %b== Total #{@view.capitalize} Tasks
