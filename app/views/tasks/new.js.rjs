page.call "restar.flick", :empty, :toggle
page.call "restar.flick", :tasks_flash, :hide
page.call "restar.flip_form", :create_task

if params[:cancel] != "true"
  page[:create_task].replace_html :partial => "create"
  page.call "restar.set_title", :create_task
  page.call "restar.date_select_popup", :task_calendar, :task_bucket
else
  page.call "restar.set_title", :create_task, (@view == "assigned" ? "Assigned Tasks" : "Tasks")
end
